<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mushroomclassifier.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_classify"
        android:name="com.example.mushroomclassifier.ui.classify.ClassifyFragment"
        android:label="@string/title_classify"
        tools:layout="@layout/fragment_classify" />

    <fragment
        android:id="@+id/navigation_species"
        android:name="com.example.mushroomclassifier.ui.species.SpeciesFragment"
        android:label="@string/title_species"
        tools:layout="@layout/fragment_species" />

    <fragment
        android:id="@+id/navigation_about"
        android:name="com.example.mushroomclassifier.ui.about.AboutFragment"
        android:label="@string/title_about"
        tools:layout="@layout/fragment_about" />
